<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robot.xang.robot" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/robot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".findblutoothDevice"
            android:label="@string/title_activity_findblutooth_device"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".robotbanner"
            android:label="@string/title_activity_robotbanner" >
        </activity>
        <activity
            android:name=".RobotBluetooth"
            android:label="@string/title_activity_robotbanner"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Robotusb"
            android:label="@string/title_activity_robotusb" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/usbaccess" />
        </activity>
        <activity
            android:name=".BluetoothListcontrol"
            android:label="@string/title_activity_bluetooth_listcontrol" >
        </activity>
        <activity
            android:name=".sensorControl"
            android:label="@string/title_activity_sensor_control" >
        </activity>
        <activity
            android:name=".screenControll"
            android:label="@string/title_activity_screen_controll" >
        </activity>
        <activity
            android:name=".soundControl"
            android:label="@string/title_activity_sound_control" >
        </activity>
        <activity
            android:name=".aboutapp"
            android:label="@string/title_activity_aboutapp" >
        </activity>
    </application>

</manifest>
