<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.robot.xang.robot.robotbanner"
    android:background="@color/background_material_dark">
    <com.github.library.bubbleview.BubbleTextVew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WellCome To Robot"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#ff34ff76"
        app:arrowWidth="20dp"
        app:angle="8dp"
        app:arrowHeight="30dp"
        app:arrowPosition="90dp"
        app:arrowLocation="bottom"
        app:bubbleColor="#000000"
        android:layout_above="@+id/banner_ani"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner_ani"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/baneranimation" />


</RelativeLayout>
