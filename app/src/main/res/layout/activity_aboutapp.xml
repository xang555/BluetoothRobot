<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robot.xang.robot.aboutapp"
    android:id="@+id/contenabout"
    android:background="@color/background_material_dark"
    android:weightSum="1">

    <TextView
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ກ່ຽວກັບແອບ"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_light"
        android:layout_gravity="center_vertical"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center_vertical|center" />

    <com.github.library.bubbleview.BubbleTextVew
        android:paddingTop="20dp"
        android:textColor="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/contenabout"
        android:id="@+id/textView4"
        app:arrowWidth="20dp"
        app:angle="8dp"
        app:arrowHeight="20dp"
        app:arrowPosition="180dp"
        app:arrowLocation="bottom"
        app:bubbleColor="#000000"
        android:layout_weight="0.44"
        android:gravity="center_vertical|center"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:id="@+id/imageView3"
        android:src="@drawable/google_android"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
