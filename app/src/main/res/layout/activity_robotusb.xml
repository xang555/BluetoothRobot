<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.robot.xang.robot.Robotusb">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="conect"
            android:id="@+id/chusbconnect"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="0.30" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/usbleft"
        android:layout_alignTop="@+id/usbrigth"
        android:layout_toLeftOf="@+id/usbup"
        android:layout_toStartOf="@+id/usbup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rigth"
        android:id="@+id/usbrigth"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/usbup"
        android:layout_toEndOf="@+id/usbup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/usbdown"
        android:layout_below="@+id/usbleft"
        android:layout_toRightOf="@+id/usbleft"
        android:layout_toEndOf="@+id/usbleft" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/usbup"
        android:layout_above="@+id/usbleft"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
